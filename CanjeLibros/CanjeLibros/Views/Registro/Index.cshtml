@model CanjeLibros.Models.Usuario

@{
    ViewBag.Title = "Registro";
}
<div class="card w-50 card-align shadow-lg p-3 mb-5 bg-white rounded">
    <div class="card-header">
        <h5 class="card-title">Ingrese sus datos</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "Registro", FormMethod.Post))
        { 
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="far fa-user"></i></span>
            </div>
            @Html.TextBox("userName", null, new { @class = "form-control", id = "txtAlias", placeholder = "Alias" })
            @Html.ValidationMessage("userName", "", new { @class = "invalid - feedback" })
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="far fa-address-card"></i></span>
            </div>
            @Html.TextBox("name", null, new { @class = "form-control", id = "txtName", placeholder = "Nombre" })
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="far fa-address-card"></i></span>
            </div>
            @Html.TextBox("lastName", null, new { @class = "form-control", id = "txtLastname", placeholder = "Apellido" })
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-at"></i></span>
            </div>
            @Html.TextBox("email", null, new { @class = "form-control", id = "txtEmail", placeholder = "Email" })
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
            </div>
            @Html.Password("password", null, new { @class = "form-control", id = "txtPassword", placeholder = "Contraseña" })
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-phone"></i></span>
            </div>
            @Html.TextBox("phone", null, new { @class = "form-control", id = "txtPhone", placeholder = "Teléfono" })
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-map-marker-alt"></i></span>
            </div>
            @Html.TextBox("location", null, new { @class = "form-control", id = "txtZone", placeholder = "Zona" })
        </div>
        <div class="text-center">
            <input type="submit" class="btn btn-success" value="Crear cuenta" />
        </div>
        }
    </div>
    </div>
